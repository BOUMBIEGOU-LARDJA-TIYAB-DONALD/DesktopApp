<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:desktop_app_hybrid"
             xmlns:components="clr-namespace:desktop_app_hybrid.Components"
             x:Class="desktop_app_hybrid.MainPage">

    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html" StartPath="/" >
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type components:Routes}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>
